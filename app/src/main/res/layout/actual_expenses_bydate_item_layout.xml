<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height_bydate"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="2dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:weightSum="19">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_weight="3"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/llCircleBG"
                android:layout_width="@dimen/circle_width_height_bydate"
                android:layout_height="@dimen/circle_width_height_bydate"
                android:background="@drawable/letter_circle"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/actualExpenseByDate_ExpenseQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/qty_height"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/quantity_circle"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="9"
                    android:textColor="@color/md_white_1000"
                    android:textSize="@dimen/qty_textSize"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/actualExpenseByDate_FirstLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="S"
                    android:textColor="@color/md_white_1000"
                    android:textSize="@dimen/first_letter_textSize_bydate"
                    fontPath="fonts/Comfortaa-Bold.ttf"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/ivChecked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_check"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/actualExpenseByDate_ExpenseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Sample Item Name"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/primary_text_size_bydate"
                    fontPath="fonts/Comfortaa-Bold.ttf" />
            </LinearLayout>

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal">-->
            <!--<ImageView-->
            <!--android:layout_width="24dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginEnd="4dp"-->
            <!--android:src="@drawable/ic_quantity" />-->
            <!--<TextView-->
            <!--android:id="@+id/salaryItem_ItemQuantity"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:gravity="center_vertical"-->
            <!--android:text="50"-->
            <!--android:textColor="@color/textSecondary"-->
            <!--android:textSize="12sp" />-->
            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--<ImageView-->
                <!--android:layout_width="24dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginEnd="4dp"-->
                <!--android:src="@drawable/ic_price" />-->

                <TextView
                    android:id="@+id/actualExpenseByDate_ExpensePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="â‚± 1234.56"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/secondary_text_size" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

