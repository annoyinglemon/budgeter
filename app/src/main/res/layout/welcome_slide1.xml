                android:scaleType="matrix"
                android:tag="coin0"/>

            <ImageView
                android:id="@+id/coin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/coin2"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin1"/>

            <ImageView
                android:id="@+id/coin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/coin3"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin2"/>

            <ImageView
                android:id="@+id/coin3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/coin4"
                android:layout_marginTop="-13dp"
