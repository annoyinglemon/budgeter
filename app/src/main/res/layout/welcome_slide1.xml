            <ImageView
                android:id="@+id/coin18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/coin19"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin18" />

            <ImageView
                android:id="@+id/coin19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin19"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/purse3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <ImageView
                android:id="@+id/coin20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:tag="coin20"
                android:layout_above="@+id/coin21"
                />

            <ImageView
                android:id="@+id/coin21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/coin22"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin21"/>

            <ImageView
                android:id="@+id/coin22"
                android:layout_width="wrap_content"
