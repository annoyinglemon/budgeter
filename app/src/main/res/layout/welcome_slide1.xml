                android:scaleType="matrix"
                android:tag="coin4"/>

            <ImageView
                android:id="@+id/coin5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/coin6"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin5"/>

            <ImageView
                android:id="@+id/coin6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/coin7"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin6"/>

            <ImageView
                android:id="@+id/coin7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/coin8"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin7"/>

            <ImageView
                android:id="@+id/coin8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/coin9"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin8"/>

            <ImageView
                android:id="@+id/coin9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/coin10"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin9"/>

            <ImageView
                android:id="@+id/coin10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin10"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/purse2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:gravity="bottom">

            <ImageView
                android:id="@+id/coin11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:tag="coin11"
                android:layout_above="@+id/coin12"
                />

            <ImageView
                android:id="@+id/coin12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/coin13"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin12" />

            <ImageView
                android:id="@+id/coin13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/coin14"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin13" />

            <ImageView
                android:id="@+id/coin14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/coin15"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin14" />

            <ImageView
                android:id="@+id/coin15"
                android:layout_width="wrap_content"
