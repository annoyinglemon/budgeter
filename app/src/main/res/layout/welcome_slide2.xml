<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome1_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifTextView
            android:layout_width="@dimen/gif_width"
            android:layout_height="@dimen/gif_height"
            android:background="@drawable/gif_calendar"
            android:layout_marginBottom="@dimen/gif_marginbottom" />
        <TextView
            android:id="@+id/slide2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expenses Calendar"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_title"
            android:visibility="invisible"
            fontPath="fonts/Comfortaa-Bold.ttf"/>

        <TextView
            android:id="@+id/slide2_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:text="Track your expenses using the expenses calendar."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_desc"
            android:visibility="invisible"/>

    </LinearLayout>

</RelativeLayout>