<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome4_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_welcome_imageviewheight"
            android:layout_marginBottom="50dp"
            android:paddingTop="12dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/list"
                android:layout_width="@dimen/slide4_list_width"
                android:layout_height="match_parent"
                android:src="@drawable/welcome1" />
            <ImageView
                android:id="@+id/money_90"
                android:layout_width="@dimen/money_width"
                android:layout_height="@dimen/money_height"
                android:src="@drawable/money"
                android:layout_alignLeft="@+id/list"
                android:layout_marginTop="@dimen/money3_margin_top"
                android:layout_marginLeft="@dimen/money3_margin_left"
                />
            <ImageView
                android:id="@+id/money_45"
                android:layout_width="@dimen/money_width"
                android:layout_height="@dimen/money_height"
                android:src="@drawable/money"
                android:layout_alignLeft="@+id/list"
                android:layout_marginTop="@dimen/money2_margin_top"
                android:layout_marginLeft="@dimen/money2_margin_left"
          />
            <ImageView
                android:id="@+id/money_0"
                android:layout_width="@dimen/money_width"
                android:layout_height="@dimen/money_height"
                android:src="@drawable/money"
                android:layout_alignLeft="@+id/list"
                android:layout_marginTop="@dimen/money1_margin_top"
                android:layout_marginLeft="@dimen/money1_margin_left"
              />
        </RelativeLayout>



        <TextView
            android:id="@+id/slide4_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HAPPY BUDGETING!"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_title"
            android:visibility="invisible"
            fontPath="fonts/Comfortaa-Bold.ttf"/>

        <TextView
            android:id="@+id/slide4_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:text="You are good to go!"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_desc"
            android:visibility="invisible"/>

    </LinearLayout>

</RelativeLayout>