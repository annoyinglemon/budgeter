<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome2_background"
    android:orientation="horizontal"
    android:weightSum="5"
    android:paddingBottom="@dimen/padding_bottom">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingLeft="@dimen/gif_paddingleftright"
        android:paddingRight="@dimen/gif_paddingleftright"
        android:paddingTop="@dimen/gif_paddingtop">

        <pl.droidsonroids.gif.GifTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gif_statistics" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/slide3_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Budget Statistics"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_title"
            android:textAlignment="center"
            android:visibility="invisible"
            fontPath="fonts/Comfortaa-Bold.ttf"/>

        <TextView
            android:id="@+id/slide3_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:text="Observe how you spend and save each day and month."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_desc"
            android:visibility="invisible"/>

    </LinearLayout>

</LinearLayout>