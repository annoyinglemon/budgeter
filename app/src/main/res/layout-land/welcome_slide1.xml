                android:tag="coin17" />

            <ImageView
                android:id="@+id/coin18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin17"

                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin18" />

            <ImageView
                android:id="@+id/coin19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin18"

                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin19" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/purse3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/coin20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:tag="coin20" />

            <ImageView
                android:id="@+id/coin21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin20"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin21" />

            <ImageView
                android:id="@+id/coin22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin21"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin22" />

            <ImageView
                android:id="@+id/coin23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin22"

                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin23" />

            <ImageView
                android:id="@+id/coin24"
                android:layout_width="wrap_content"
