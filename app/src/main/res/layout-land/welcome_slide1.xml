                android:layout_below="@+id/coin25"

                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin26" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <!--<ImageView-->
        <!--android:layout_width="@dimen/img_width_height"-->
        <!--android:layout_height="@dimen/img_width_height"-->
        <!--android:src="@drawable/ic_actual_expenses" />-->

        <TextView
            android:id="@+id/slide1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your budget setup"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_title"
            android:visibility="invisible"
            fontPath="fonts/Comfortaa-Bold.ttf"/>

        <LinearLayout
            android:id="@+id/slide1_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dots_margin_bottom"
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/desc_padding"
                android:paddingRight="@dimen/desc_padding"
                android:text="Please enter your desired monthly and daily budget. You can skip this setup and set your budget later at Settings."
                android:textAlignment="center"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/slide_desc" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColorHint="@color/md_white_1000">

                <EditText
                    android:id="@+id/etMonthly"
                    android:layout_width="@dimen/edittext_width"
                    android:layout_height="match_parent"
                    android:hint="Monthly Budget Amount"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/md_white_1000"
                    android:textSize="@dimen/slide_edittext" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbDistri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:checked="false"
                    android:text="Disperse monthly budget"
                    android:textColor="@color/md_white_1000"
                    android:textSize="@dimen/slide_desc_smaller" />

                <ImageView
                    android:id="@+id/ivMoreInfo"
                    android:layout_width="@dimen/imageview_width_height"
                    android:layout_height="@dimen/imageview_width_height"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:clickable="true"
                    android:src="@android:drawable/ic_dialog_info" />
            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilDaily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColorHint="@color/md_white_1000">

                <EditText
                    android:id="@+id/etDaily"
                    android:layout_width="@dimen/edittext_width"
                    android:layout_height="match_parent"
                    android:hint="Daily Budget Amount"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/md_white_1000"
                    android:textSize="@dimen/slide_edittext" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>