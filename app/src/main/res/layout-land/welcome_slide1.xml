<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome3_background"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_bottom"
    android:tag="budget_setup"
    android:weightSum="9"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="4"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/purse1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/coin0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:tag="coin0" />

            <ImageView
                android:id="@+id/coin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin0"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin1" />

            <ImageView
                android:id="@+id/coin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin1"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin2" />

            <ImageView
                android:id="@+id/coin3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin2"

                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin3" />

            <ImageView
                android:id="@+id/coin4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin3"

                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin4" />

            <ImageView
                android:id="@+id/coin5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin4"

                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin5" />

            <ImageView
                android:id="@+id/coin6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin5"

                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin6" />

            <ImageView
                android:id="@+id/coin7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin6"

                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin7" />

            <ImageView
                android:id="@+id/coin8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin7"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin8" />

            <ImageView
                android:id="@+id/coin9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin8"

                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin9" />

            <ImageView
                android:id="@+id/coin10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin9"

                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin10" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/purse2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp">

            <ImageView
                android:id="@+id/coin11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:tag="coin11" />

            <ImageView
                android:id="@+id/coin12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin11"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin12" />

            <ImageView
                android:id="@+id/coin13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin12"
                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin13" />

            <ImageView
                android:id="@+id/coin14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin13"

                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin14" />

            <ImageView
                android:id="@+id/coin15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin14"

                android:layout_marginTop="-13dp"
                android:scaleType="matrix"
                android:tag="coin15" />

            <ImageView
                android:id="@+id/coin16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coin15"

                android:layout_marginTop="-13dp"
