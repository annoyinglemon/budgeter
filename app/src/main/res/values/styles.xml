<resources>

    <!-- Light Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:listViewStyle">@style/ListView_Light</item>\
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!--<style name="AppTheme.NoActionBar">-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="android:windowActionModeOverlay">true</item>-->
    <!--</style>-->

    <style name="ListView_Light" parent="Widget.AppCompat.ListView">
        <item name="android:itemBackground">@color/md_white_1000</item>
        <item name="android:divider">@color/colorDivider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:listSelector">@color/itemHighlight</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/md_grey_50</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:editTextColor">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:alertDialogStyle">@style/AppTheme.Dialog</item>
    </style>

    <style name="AppTheme.Dialog.Message" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>

    </style>

    <!-- Dark Theme -->
    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeStyle">@style/ActionMode</item>

        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorSecondary">#B6B6B6</item>
        <item name="android:listViewStyle">@style/ListView_Dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <!--<style name="AppThemeDark.NoActionBar">-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="android:windowActionModeOverlay">true</item>-->
    <!--</style>-->

    <style name="ListView_Dark" parent="Widget.AppCompat.ListView">
        <item name="android:itemBackground">@color/md_grey_900</item>
        <item name="android:divider">#1E1E1E</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorSecondary">#B6B6B6</item>
        <item name="android:listSelector">@color/itemHighlight</item>
    </style>

    <style name="AppThemeDark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeDark.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="NavigationDrawerStyle_XLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:listPreferredItemHeightSmall">50dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="NavigationDrawerStyle_Large">
        <item name="android:textSize">16sp</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
